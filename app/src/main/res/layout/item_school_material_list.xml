<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitleList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:text="@string/inventaryTeacherListTitle"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvTeacher"
        android:layout_width="193dp"
        android:layout_height="25dp"
        android:layout_below="@+id/tvTitleList"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="98dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="dadawdawdwd" />

    <TextView
        android:id="@+id/tvClase"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTeacher"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="128dp"
        android:textSize="15sp"
        tools:text="wdawd" />

    <TextView
        android:id="@+id/etInitialMonth"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvClase"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="226dp"
        android:ems="10"
        android:inputType="date"
        android:textSize="15sp"
        android:textStyle="italic"
        tools:text="ds" />

    <TextView
        android:id="@+id/etFinalMonth"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvClase"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="201dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="date"
        android:textSize="15sp"
        tools:text="ds" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="124dp"
        android:layout_height="41dp"
        android:layout_below="@+id/etFinalMonth"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="135dp"
        android:backgroundTint="@color/red"
        android:text="Eliminar"
        tools:text="Eliminar" />

</RelativeLayout>